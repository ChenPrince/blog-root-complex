<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zerodg.vwdao.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.zerodg.vwentity.entity.User">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="age" column="age"/>
    </resultMap>

    <!--插入新用户-->
    <insert id="insertNewUser" parameterType="com.zerodg.vwentity.entity.User">
        insert into user( name ,age)
        VALUES (#{user.name} ,#{user.age})
    </insert>

    <!--通过id获取用户信息-->
    <select id="getUserByID" resultType="com.zerodg.vwentity.entity.User">
        select *
        from user
        where id=#{id}
    </select>

    <update id="updateUserById" parameterType="integer">

    </update>

</mapper>